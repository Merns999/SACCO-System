@page
@model SACCO_System.Pages.Loans.RequestLoanModel
@{
    ViewData["Title"] = "Loan Request";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<h4>Requesting for a loan</h4>
<hr />
<div >
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="MemberId">Member Id</label>
                <input type="number" class="form-control" id="MemberId" placeholder="Enter Your Id..">
            </div>
            <div class="form-group col-md-6">
                <label for="Guarantor">Guarantor Id</label>
                <input type="number" class="form-control" id="MemberId" placeholder="Enter Your Guarantor's Id..">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="Income">Annual income</label>
            <input type="number" class="form-control" id="Income" placeholder="eg 100,000">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="LoanType">Loan Type</label>
                <select id="LoanType" class="form-control">
                    <option selected>Choose...</option>
                    <option>Long Term ie &le; 2 years</option>
                    <option>Long Term ie >2 years</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="Period">Loan Period</label>
                <input type="number" class="form-control" id="Period" placeholder="eg 2 years">
            </div>
        </div>
        <div class="form-group">
            <label for="Principle">Amount of Loan</label>
            <input type="number" class="form-control" id="Principle" placeholder="eg 1,000,000">
        </div>
        
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    I agree to the <a href="~/Terms" >Terms &amp; Conditions </a> of applying to this Service
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
        <div class="form-group">
            <a class="btn btn-danger" href="~/Users/UserFront">Back</a>
        </div>
    </form>
</div>
